<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
          "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.kos.tr.news.login.repository.LoginRepository">

<select id="loginCheck" parameterType="memberVo" resultType="boolean">
	SELECT
		IF(COUNT(*) = 1, 1, 0)
	FROM 	TR_MEMBER A
	WHERE 	A.DELETEYN = 'Y'
	AND    A.MID = #{mid}
	AND    A.MPW = #{mpw}
</select>

</mapper>


